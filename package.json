{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "gsheet",
    "version": "1.0.0",
    "author": "Cocos Creator",
    "editor": ">=3.8.8",
    "scripts": {
        "preinstall": "node ./scripts/preinstall.js",
        "build": "npx tsc"
    },
    "description": "Automatically download data from Google Sheets and generate TypeScript classes for game data management. Supports CSV download, JSON conversion, and automatic code generation.",
    "main": "./dist/main.js",
    "dependencies": {
        "fs-extra": "^10.0.0"
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.8",
        "@types/fs-extra": "^9.0.5",
        "@types/node": "^18.17.1",
        "typescript": "^5.8.2"
    },
    "panels": {
        "default": {
            "title": "Google Sheets Manager",
            "type": "dockable",
            "main": "dist/panels/default",
            "size": {
                "min-width": 600,
                "min-height": 400,
                "width": 1024,
                "height": 700
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "Qwappy",
                "label": "Google Sheets Manager",
                "message": "open-panel"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": [
                    "openPanel"
                ]
            },
            "send-to-panel": {
                "methods": [
                    "default.hello"
                ]
            }
        }
    }
}
